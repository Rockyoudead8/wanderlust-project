<% layout("/layouts/boilerplate")%>
    <%=success%>
        <style>
            .filters {
                display: flex;
                flex-wrap: wrap;
            }

            .filter {
                margin-right: 2rem;
                margin-top: 2rem;
                margin-bottom: 2rem;
                text-align: center;
                opacity: .4;
            }

            .filter:hover {
                opacity: 1;
                text-decoration: underline;
            }

            .tax-info {
                display: none;
            }
            .tax-toggle{
                border: 5px solid black;
                border-radius: 2rem;
                height: 3rem;
                padding-top: 1rem;
                padding-bottom: 2.5rem;
                padding-left:1.5rem ;
                padding-right:1.5rem ;
                margin-top: 2rem;
                margin-left: 4rem;
                background-color:#FF3F33;
            }
        </style>

        <body>
            <div class="filters">
                <div class="filter">
                    <i class="fa-solid fa-fire-flame-curved"></i>
                    <div>
                        <p>Trending</p>
                    </div>
                </div>

                <div class="filter">
                    <i class="fa-solid fa-person-swimming"></i>
                    <div>
                        <p>Pool</p>
                    </div>
                </div>

                <div class="filter">
                    <i class="fa-solid fa-city"></i>
                    <div>
                        <p>Iconic Cities</p>
                    </div>
                </div>

                <div class="filter">
                    <i class="fa-solid fa-mountain-sun"></i>
                    <div>
                        <p>Mountain</p>
                    </div>
                </div>

                <div class="filter">
                    <i class="fa-brands fa-fort-awesome"></i>
                    <div>
                        <p>Castle</p>
                    </div>
                </div>

                <div class="filter">
                    <i class="fa-solid fa-tents"></i>
                    <div>
                        <p>Camping</p>
                    </div>
                </div>

                <div class="filter">
                    <i class="fa-solid fa-snowflake"></i>
                    <div>
                        <p>Artic</p>
                    </div>
                </div>

                <div class="filter">
                    <i class="fa-solid fa-bed"></i>
                    <div>
                        <p>Rooms</p>
                    </div>
                </div>

                <div class="filter">
                    <i class="fa-solid fa-lock"></i>
                    <div>
                        <p>Private Properties</p>
                    </div>
                </div>

                <div class="filter">
                    <i class="fa-solid fa-face-kiss-wink-heart"></i>
                    <div>
                        <p>Best Sellers</p>
                    </div>
                </div>

                <div class="form-check form-switch form-check-reverse tax-toggle">
                    <input class="form-check-input" type="checkbox" id="switchCheckReverse">
                    <label class="form-check-label" for="switchCheckReverse">Reverse switch checkbox input</label>
                </div>
            </div>

            <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
                <%for(let listing of allListings){%>
                    <a href="/listings/<%=listing._id%>" class="card-link">
                        <div class="card">
                            <img src="<%=listing.image.url%>" class="card-img-top" alt="listing_image"
                                style="height: 20rem;width: 18rem;">
                            <div class="card-img-overlay"></div>
                            <div class="card-body">
                                <h4 class="card-title">
                                    <%=listing.title%>
                                </h4>
                                <b>
                                    <p>Price: <%=listing.price%> / &nbsp;night <i class="tax-info">+ 18% GST</i> </p>
                                </b>
                                <h5>
                                    <p class="card-text">
                                        <%=listing.description%>
                                    </p>
                                </h5>
                                <br>
                                <h6>Location : <%=listing.location%>
                                </h6>

                                <h6>country : <%=listing.country%>
                                </h6>
                            </div>


                        </div>
                    </a>
                    <%}%>
            </div>


            <script>
                let taxSwitch = document.getElementById("switchCheckReverse");
                taxSwitch.addEventListener("click", () => {
                    let infos = document.getElementsByClassName("tax-info");
                    for (let info of infos) {
                        if (info.style.display === "none" || info.style.display === "") {
                            info.style.display = "inline";
                        } else {
                            info.style.display = "none";
                        }
                    }
                })
            </script>

        </body>